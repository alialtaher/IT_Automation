def convert_seconds(seconds):
    hours=seconds//3600
    minutes=(seconds-hours*3600)//60
    remaining_seconds=seconds- hours*3600-minutes*60    
    return hours,minutes,remaining_seconds

hours,minutes,remaining_seconds=convert_seconds(37850)
print("hours is: "+str(hours)+" minutes are: "+str(minutes)+" seconds are: "+str(remaining_seconds))